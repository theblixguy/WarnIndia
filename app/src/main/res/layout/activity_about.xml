<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_layout__about"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_cal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="WarnIndia app for Android "
                android:id="@+id/textView_Title"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/toolbar_about"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff" />

            <TextView
                android:textColor="#8b96d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Version"
                android:id="@+id/textView3_Version"
                android:layout_below="@+id/textView_Title"
                android:layout_alignLeft="@+id/textView_Title"
                android:layout_alignStart="@+id/textView_Title"
                android:layout_marginTop="38dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1.2.000.b"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3_Version"
                android:layout_alignLeft="@+id/textView3_Version"
                android:layout_alignStart="@+id/textView3_Version"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="2dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="WarnIndia allows you to view latest quake, cyclone and tsunami data from governmental websites and services directly."
                android:id="@+id/textView_info_about"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:textColor="#8b96d2"
                android:layout_alignRight="@+id/textView8"
                android:layout_alignEnd="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="WarnIndia for Android is made using great open source software:"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView_info_about"
                android:layout_alignLeft="@+id/textView_info_about"
                android:layout_alignStart="@+id/textView_info_about"
                android:layout_marginTop="35dp"
                android:layout_alignRight="@+id/textView_info_about"
                android:layout_alignEnd="@+id/textView_info_about"
                android:singleLine="false"
                android:longClickable="false"
                android:elegantTextHeight="false"
                android:fontFamily="sans-seif-thin"
                android:textColor="#8b96d2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="licenses"
                android:onClick="showLicensesDialog"
                android:id="@+id/textView7_Licenses"
                android:layout_alignBottom="@+id/textView6"
                android:layout_toRightOf="@+id/textView4"
                android:layout_toEndOf="@+id/textView4"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="List of govt. websites"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:onClick="showGovtWebsitesDialog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="beta"
                android:id="@+id/textView8"
                android:textStyle="italic"
                android:layout_below="@+id/textView_Title"
                android:layout_alignRight="@+id/textView_Title"
                android:layout_alignEnd="@+id/textView_Title"
                android:layout_marginTop="-4dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp" />


        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>

</FrameLayout>